<h3>User register</h3>
<%= flash[:error] %>
<%= form_tag :action => 'register' do %>
	<table>
	<tr title="Use this name to login to system."><td>Login name:</td>
	<td><%= text_field_tag("username", flash[:username]) %></td></tr>
	<tr title="Optional name to display instead of login name."><td>Nickname:</td><td><%= text_field_tag("nickname", flash[:nickname]) %></td></tr>
	<tr><td>E-mail address:</td><td><%= text_field_tag("email", flash[:email]) %></td></tr>
	<tr><td>Password:</td><td><%= password_field_tag("password1") %></td></tr>
	<tr><td>Re-input password:</td><td><%= password_field_tag("password") %></td></tr>
	</table>
	<%= submit_tag  "Register"  %>
<% end %>